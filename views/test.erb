<form action="/test>" method="POST">

    <div class="form-group row">
      <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">Ваше имя:</label>
      <div class="col-sm-10">
        <input style="width: 250px; height: 30px" type="text" class="form-control form-control-sm" name="username" id="colFormLabelSm" placeholder="Введите Ваше имя или ник" required>
      </div>
    </div>
    <div class="form-group row">
      <label for="colFormLabel" class="col-sm-2 col-form-label">Ваш комментарий:</label>
      <div class="col-sm-10">
       <textarea style="width: 550px; height: 150px" class="form-control" id="colFormLabel" rows="3" name="comment" maxlength="200" required placeholder="Напишите Ваш комментарий" value="<%= @comment %>"></textarea>
      </div>
    </div>

  <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Запустить модальное окно
  </button>

  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Вы уверены?</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Вы уверены, что хотите опубликовать комментарий?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
          <button type="submit" class="btn btn-primary">Отправить</button>
        </div>
      </div>
    </div>
  </div>

</form>


